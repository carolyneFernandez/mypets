{% extends 'mail/base_mail.html.twig' %}

{% block body %}
    <p>
        Bonjour,<br>
        <br>
        Une nouvelle demande d'inscription d'une clinique vient d'arrivée.<br>
        <br>
        Nom de la clinique : {{ clinique.nom }}<br>
        Adresse : {{ clinique.adresse }}<br>
        Téléphone : {{ clinique.telephone }}<br>
        <br>
    </p>
    <div class="text-center">
        <a href="{{ url('clinique_show', {id: clinique.id}) }}" class="btn btn-warning rounded-pill">Ouvrir la demande</a>
    </div>
{% endblock %}