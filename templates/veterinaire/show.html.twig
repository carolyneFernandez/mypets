{% extends 'layout/base_user.html.twig' %}

{% block title %}MyPets | Détail vétérinaire{% endblock %}

{% block body %}
    <h1 class="text-center"> Fiche du vétérinaire : {{ veterinaire.nom }}  {{ veterinaire.prenom }}</h1>
    <a href="{{ path('veterinaire_index') }}">Retour à la liste</a>

    <a href="{{ path('veterinaire_edit', {'id': veterinaire.id}) }}">edit</a>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ veterinaire.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ veterinaire.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ veterinaire.roles ? veterinaire.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ veterinaire.password }}</td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ veterinaire.dateCreation ? veterinaire.dateCreation|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Actif</th>
                <td>{{ veterinaire.actif ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>DerniereConnexion</th>
                <td>{{ veterinaire.derniereConnexion ? veterinaire.derniereConnexion|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ veterinaire.nom }}</td>
            </tr>
            <tr>
                <th>Prenom</th>
                <td>{{ veterinaire.prenom }}</td>
            </tr>
            <tr>
                <th>IntervalBetweenRdv</th>
                <td>{{ veterinaire.intervalBetweenRdv ? veterinaire.intervalBetweenRdv|date('H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Formations</th>
                <td>{{ veterinaire.formations }}</td>
            </tr>
        </tbody>
    </table>


    {{ include('veterinaire/_delete_form.html.twig') }}
{% endblock %}
